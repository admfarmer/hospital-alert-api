{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": false,
    "removeComments": true,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "typeRoots": [
      "node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/@types/*",
        "./types/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ],
}